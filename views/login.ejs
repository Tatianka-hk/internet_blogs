<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs')  %> 
<body id="page-top" class="loginBody">
    <nav>
        <a class="brand" href="/">
            FABULA
        </a>
    </nav>
    <section class="page-section" id="register">
        <form id = "registerForm" method="post">
            <div class="mb-1">
                        <input class="form-control" name="name" type="text" placeholder="Your Login *"  />
                        <input class="form-control" name="password" type="password" placeholder="Your Password *" data-sb-validations="required,password" />
           
            <div class="errors" >
                <% if(typeof alert != 'undefined') { %>
                           <h3> <%= alert[0].msg %></h3>
                <% } %>
                <% if(typeof no_matching != 'undefined') { %>
                           <h3>  No correct password or name </h3>
                <% } %>
            </div>
            <button class="send" id="submitLogin" type="submit">Login</button>
        </form>
    </section>
    <footer class="loginFooter">
        Copyright &copy; Your Website 2022
    </footer>
  <script>
// at = localStorage.getItem('access_token')
if ( '<%= token %>' != 'undefined') {
try{
    
    console.log("try")
    localStorage.setItem(' token', '<%= token %>'); 
    var xhr = new window.XMLHttpRequest()
    xhr.open('GET', '<%= url %>', true);
    xhr.setRequestHeader(  'Content-Type', 'application/json;charset=UTF-8' );
    xhr.setRequestHeader('authorization'  , '<%= token %>' )
    xhr.send();

} catch(err){
    // console.log(error)
}
}


  </script>
</body>
</html>